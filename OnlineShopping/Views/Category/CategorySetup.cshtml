@model ECommPract.Models.SetupModel.CategorySetup
@{
    ViewBag.Title = "CategorySetup";
    if(ViewBag.OPENAS=="popup")
    {
        Layout = null;
    }
    else
    {
        Layout = "~/Views/AdminShared/_LayoutAdmin.cshtml";
    }
}
<div class="contact-wrapper" style="padding-bottom:10px;">
    <div class="image-contact">
        <img src="~/images/pageBanner.png" />
        <h2 style="text-align:center">Category Setup</h2>
    </div>
    @using (Html.BeginForm("CategorySetup","Category",FormMethod.Post))
    {
        <div class="form-horizontal">
            <div class="form-group" style="margin-right: 20px;">
                <label class="col-md-3 control-label">Category Name</label>
                <div class="col-md-6">
                    @*<input type="text" class="form-control" placeholder="Enter Category Name" />*@
                    @Html.TextBoxFor(m=>m.CATEGORYNAME, new { @class="form-control",placeholder="Enter Category Name"})
                </div>

            </div>
            <div class="form-group" style="margin-right:20px;">
                <div class="col-md-offset-3 col-md-6 text-right">
                    <input type="submit" value="Save" class="btn btn-default" />
                    <input type="reset" value="Cancel" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>