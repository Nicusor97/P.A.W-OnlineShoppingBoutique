@model ECommPract.Models.SetupModel.BrandSetup
@{
    ViewBag.Title = "Brand";
    if(ViewBag.OPENAS =="popup")
    {
        Layout = null;
    }
    else
    {
        Layout = "~/Views/AdminShared/_LayoutAdmin.cshtml";
    }
}

<div class="contact-wrapper">
    <div class="image-contact">
        <img src="~/images/pageBanner.png" />
            <h4 style="text-align:center">Brand Setup</h4>
    </div>
    @{ 
        using (Html.BeginForm("Brand","Category",FormMethod.Post,new { enctype="multipart/form-data" }))
        {
            <div class="form-horizontal adjustment">
                <div class="form-group">
                    <label class="col-md-3 col-sm-12 col-xs-12">Brand Name</label>
                    <div class="col-md-6 col-sm-12 col-xs-12">
                        @*<input type="text" class="form-control" />*@
                        @Html.TextBoxFor(m=>m.BRANDNAME, new { @class="form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-sm-12 col-xs-12">Brand Image</label>
                    <div class="col-md-6 col-sm-12">
                        <input type="file" name="fileupload" id="fileupload"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-6 col-sm-12 col-xs-12 text-right">
                        <input type="submit" class="btn btn-default" value="Save" />
                        <input type="reset" class="btn btn-default" value="Cancel"/>
                    </div>
                </div>
            </div>
        }
    }
</div>

