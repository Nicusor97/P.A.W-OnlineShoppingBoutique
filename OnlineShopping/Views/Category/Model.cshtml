
@{
    ViewBag.Title = "Model";
}

<div class="contact-wrapper">
    <div class="image-contact">
        <img src="~/images/pageBanner.png" />
        <h4 style="text-align:center">Model Setup</h4>
    </div>
    @{ 
        using (Html.BeginForm())
        {
            <div class="form-horizontal adjustment">
                <div class="form-group">
                    <label class="col-md-2">Model Name</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2">Model Image</label>
                    <div class="col-md-4">
                        <input type="file"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-4 text-right">
                        <button class="btn btn-default">Save</button>
                        <button class="btn btn-default">Cancel</button>
                    </div>
                </div>
            </div>
        }
    }
</div>

